@model MvcMovie.Models.PescatarianTypeViewModel

@{
    ViewData["Title"] = "Pescatarian Menu";
}

<h1>Pescatarian Menu</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-controller="Pescatarian" asp-action="Index">
    <p>
        <select asp-for="DishType" asp-items="Model.Types">
            <option value="">All</option>
        </select>

        Dish name: <input type="text" name="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Pescatarians![0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pescatarians![0].Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pescatarians![0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pescatarians[0].Rating)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Pescatarians!)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rating)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>